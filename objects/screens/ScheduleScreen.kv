<ScheduleScreen>:
    name: "schedule"
    title: "Расписание"

    BoxLayout:
        orientation: "vertical"
        size_hint: 1, None
        size: root.width, root.height
        padding: app.settings["screen"]["padding"] / 2, app.settings["screen"]["padding"]
        spacing: 15

        # Май, 2022
        BoxLayout:
            size_hint_y: None
            height: 40
            MDIconButton:
                size_hint_y: None
                icon: "arrow-left"

                on_release:
                    root.update_month(-1)

            MDLabel:
                id: header_month
                text: "Май, 2022"
                font_size: 22
                halign: "center"
                valign: "center"

            MDIconButton:
                size_hint_y: None
                height: 40
                icon: "arrow-right"

                on_release:
                    root.update_month(1)
        # 11, среда
        BoxLayout:
            size_hint_y: None
            height: 40
            MDIconButton:
                size_hint_y: None
                icon: "arrow-left"

                on_release:
                    root.update_day(-1)

            MDLabel:
                id: header_day
                text: "11, среда"
                font_size: 22
                halign: "center"
                valign: "center"

            MDIconButton:
                size_hint_y: None
                height: 40
                icon: "arrow-right"

                on_release:
                    root.update_day(1)

        ScrollView:
            MDGridLayout:
                id: students_list
                cols: 1
                adaptive_height: True
                spacing: 20

