<ScheduleScreen>:
    name: "schedule"
    title: "Расписание"

    BoxLayout:
        orientation: "vertical"
        size_hint: 1, None
        size: root.width, root.height
        padding: app.settings["screen"]["padding"] / 2, app.settings["screen"]["padding"]
        spacing: 15

        # Май, 2022
        BoxLayout:
            size_hint_y: None
            height: 40
            MDIconButton:
                size_hint_y: None
                icon: "arrow-left"

                on_release:
                    print("Left arrow")

            MDLabel:
                text: "Май, 2022"
                font_size: 22
                halign: "center"
                size_hint_y: None
                height: 40

            MDIconButton:
                size_hint_y: None
                height: 40
                icon: "arrow-right"

                on_release:
                    print("Right arrow")
        # 11, среда
        BoxLayout:
            size_hint_y: None
            height: 40
            MDIconButton:
                size_hint_y: None
                icon: "arrow-left"

                on_release:
                    print("Left arrow")

            MDLabel:
                text: "11, среда"
                font_size: 22
                halign: "center"
                size_hint_y: None
                height: 40

            MDIconButton:
                size_hint_y: None
                height: 40
                icon: "arrow-right"

                on_release:
                    print("Right arrow")

        ScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                spacing: 20

                MDCard:
                    size_hint_y: None
                    height: 100
                    md_bg_color: rgba(app.settings["color"]["lemon"])
                    orientation: "vertical"
                    on_release:
                        print("Ты тыкнул")

                    BoxLayout:
                        MDLabel:
                            halign: "center"
                            text: "1"
                        MDLabel:
                            halign: "center"
                            text: "16:30"
                        MDLabel:
                            halign: "center"
                            text: "Вова"
                    MDLabel:
                        halign: "center"
                        md_bg_color: rgba(app.settings["color"]["honeydew"])
                        text: "ул. 2-я Владимирская, 5"

                MDCard:
                    size_hint_y: None
                    height: 100
                    md_bg_color: rgba(app.settings["color"]["lemon"])
                    orientation: "vertical"
                    BoxLayout:
                        MDLabel:
                            halign: "center"
                            text: "2"
                        MDLabel:
                            halign: "center"
                            text: "18:30"
                        MDLabel:
                            halign: "center"
                            text: "Илия"
                    MDLabel:
                        halign: "center"
                        md_bg_color: rgba(app.settings["color"]["honeydew"])
                        text: "У преподавателя"
                MDFillRoundFlatButton:
                    size_hint_x: 1
                    text: "Добавить занятие"
                #Widget:
