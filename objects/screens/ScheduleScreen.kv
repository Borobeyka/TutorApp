
<ScheduleScreen>:
    name: "schedule"
    title: "Расписание"

    BoxLayout:
        orientation: "vertical"
        size_hint: 1, None
        size: root.width, root.height
        padding: app.settings["screen"]["padding"] / 2, app.settings["screen"]["padding"]
        spacing: 15

        # Май, 2022
        BoxLayout:
            size_hint_y: None
            height: 40
            MDIconButton:
                size_hint_y: None
                icon: "arrow-left"

                on_release:
                    print("Left arrow")

            MDLabel:
                text: "Май, 2022"
                font_size: 28
                halign: "center"
                size_hint_y: None
                height: 40

            MDIconButton:
                size_hint_y: None
                height: 40
                icon: "arrow-right"

                on_release:
                    print("Right arrow")
        # 11, среда
        BoxLayout:
            size_hint_y: None
            height: 40
            MDIconButton:
                size_hint_y: None
                icon: "arrow-left"

                on_release:
                    print("Left arrow")

            MDLabel:
                text: "11, среда"
                font_size: 28
                halign: "center"
                size_hint_y: None
                height: 40

            MDIconButton:
                size_hint_y: None
                height: 40
                icon: "arrow-right"

                on_release:
                    print("Right arrow")
        ScrollView:
            md_bg_color: rgba(app.settings["color"]["black"])

            BoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                size: root.width, root.height
                spacing: 15

                BoxLayout:
                    padding: 0, app.settings["screen"]["padding"] * 3, 0, 0
                    md_bg_color: rgba(app.settings["color"]["blue"])

                    MDLabel:
                        text: "Вова"
