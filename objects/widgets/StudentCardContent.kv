<StudentCardContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: 400

    MDTextField:
        id: students_list
        hint_text: "Ученик"
        text: str(root.student.ids.student_name.text)
        readonly: True

        on_focus:
            if self.focus: root.menu.open()

    MDTextField:
        id: student_time
        hint_text: "Назначенное время"
        text: str(root.student.ids.time.text)
        readonly: True

        on_focus:
            if self.focus: root.show_date_picker()

    MDTextField:
        id: lesson_type
        hint_text: "Тип занятия"
        text: str(root.student.ids.time.text)
        readonly: True

        on_focus:
            print(root.student.ids)
