<StudentCard>:
    size_hint_y: None
    height: app.settings["screen"]["schedule"]["card_height"]
    md_bg_color: rgba(app.settings["color"]["lemon"])
    orientation: "vertical"
    on_release:
        print(self)
    BoxLayout:
        MDLabel:
            id: id
            #text: "1"
            halign: "center"
        MDLabel:
            id: time
            #text: "16:30"
            halign: "center"
        MDLabel:
            id: name
            #text: "Вова"
            halign: "center"
    MDLabel:
        id: address
        #text: "ул. 2-я Владимирская, 5"
        halign: "center"
        md_bg_color: rgba(app.settings["color"]["honeydew"])
