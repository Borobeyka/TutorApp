#:import utils kivy.utils

<MainWidget>:
    orientation: "vertical"

    MDToolbar:
        id: toolbar
        title: "Расписание"
        md_bg_color: rgba(app.settings["color"]["violet"])
        specific_text_color: rgba(app.settings["color"]["white"])
        elevation: 20

    ScreenManagement:
        id: SSS
        #transition: FadeTransition()
        ScheduleScreen:
            name: "schedule"
        ProfileScreen:
            name: "profile"


    MDBottomNavigation:
        panel_color: rgba(app.settings["color"]["violet"])
        text_color_normal: rgba(app.settings["color"]["white"])
        text_color_active: rgba(app.settings["color"]["lightred"])

        MDBottomNavigationItem:
            text: "Расписание"
            icon: "calendar-month"

            on_tab_release:
                root.ids["SSS"].current = "profile"
                #print(self.manager.current)
                #self.manager.current = "schedule"

        MDBottomNavigationItem:
            text: "Профиль"
            icon: "account"

            on_tab_release: self.manager.current = "profile"

        MDBottomNavigationItem:
            text: "Ученики"
            icon: "account-edit"

        MDBottomNavigationItem:
            text: "Настройки"
            icon: "tune"

    
