#:import utils kivy.utils
#:import NoTransition kivy.uix.screenmanager.NoTransition

<MainWidget>:
    orientation: "vertical"

    MDToolbar:
        id: tool_bar
        font_size: 48
        title: root.ids.manager.get_screen(root.ids.manager.current).title
        md_bg_color: rgba(app.settings["color"]["honeydew"])
        specific_text_color: rgba(app.settings["color"]["black"])

    ScreenManagement:
        id: manager
        transition: NoTransition()

        ScheduleScreen:
        ProfileScreen:
        StudentsScreen:

    MDBottomNavigation:
        id: navigator
        size_hint_y: None
        panel_color: rgba(app.settings["color"]["honeydew"])
        text_color_normal: rgba(app.settings["color"]["black"])
        text_color_active: rgba(app.settings["color"]["black"])

        MDBottomNavigationItem:
            name: "schedule"
            text: "Расписание"
            icon: "calendar-month"

            on_tab_release:
                root.change_screen(self)

        MDBottomNavigationItem:
            name: "profile"
            text: "Профиль"
            icon: "account"

            on_tab_release:
                root.change_screen(self)

        MDBottomNavigationItem:
            name: "students"
            text: "Ученики"
            icon: "account-edit"

            on_tab_release:
                root.change_screen(self)
