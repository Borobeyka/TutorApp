<LessonContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: 260

    MDLabel:
        id: notificator
        color: [1, 0, 0, 1]

    MDTextField:
        id: students_list
        hint_text: "Ученик"
        readonly: True

        on_focus:
            if self.focus: root.students_list.open()

    MDTextField:
        id: student_time
        hint_text: "Назначенное время"
        readonly: True

        on_focus:
            if self.focus: root.show_date_picker()

    MDTextField:
        id: lessons_list
        hint_text: "Тип занятия"
        readonly: True

        on_focus:
            if self.focus: root.lessons_list.open()

    MDTextField:
        id: payment_list
        hint_text: "Форма оплаты"
        readonly: True

        on_focus:
            if self.focus: root.payment_list.open()
